{
  "name": "flex-theme",
  "version": "1.0.2",
  "description": "A lightweight, flexible theme management system for light/dark modes in web applications",
  "author": "TeckMill",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Nom-nom-hub/FlexTheme.git"
  },
  "keywords": [
    "theme",
    "dark-mode",
    "light-mode",
    "react",
    "typescript",
    "ssr"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "size": "size-limit",
    "release": "npm run test && npm run build && npm publish"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^15.0.0",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.0",
    "@vitest/coverage-v8": "^3.1.1",
    "happy-dom": "^17.4.4",
    "jsdom": "^26.1.0",
    "react": "^18.2.0",
    "size-limit": "^11.2.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "overrides": {
    "@testing-library/react": {
      "@types/react": "^19.1.2"
    }
  }
}
