{
  "name": "flex-theme",
  "version": "1.0.3",
  "description": "A flexible theming system for web applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist tsup.*.log .turbo",
