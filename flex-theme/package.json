{
  "name": "flex-theme",
  "version": "1.0.0",
  "description": "A lightweight, flexible theme management system for light/dark modes",
  "author": "",
  "license": "MIT",
  "keywords": [
    "theme",
    "dark-mode",
    "light-mode",
    "react",
    "typescript",
    "theming",
    "color-scheme",
    "css-variables",
    "npm-package",
    "vue",
    "angular",
    "svelte",
    "solid",
    "web-components"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/flex-theme.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/flex-theme/issues"
  },
  "homepage": "https://github.com/yourusername/flex-theme#readme",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.js"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "import": "./dist/tokens/index.mjs",
      "require": "./dist/tokens/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.mjs",
      "require": "./dist/utils/index.js"
    },
    "./animations": {
      "types": "./dist/animations/index.d.ts",
      "import": "./dist/animations/index.mjs",
      "require": "./dist/animations/index.js"
    },
    "./presets": {
      "types": "./dist/presets/index.d.ts",
      "import": "./dist/presets/index.mjs",
      "require": "./dist/presets/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "size": "size-limit",
    "prepublishOnly": "npm run test && npm run size && npm run build"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "2 KB"
    },
    {
      "path": "dist/index.mjs",
      "limit": "2 KB"
    },
    {
      "path": "dist/react.js",
      "limit": "2 KB"
    },
    {
      "path": "dist/react.mjs",
      "limit": "2 KB"
    }
  ],
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.0",
    "@vitest/coverage-v8": "^3.1.1",
    "jsdom": "^26.1.0",
    "react": "^19.1.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
