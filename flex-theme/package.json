{
  "name": "flex-theme",
  "version": "1.0.1",
  "description": "A flexible theming system for web applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && cp dist/index.js dist/bundle.js",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:watch": "vitest test",
    "test:coverage": "vitest run --coverage test",
    "size": "node_modules/.bin/size-limit --limit 10KB dist/bundle.js || node scripts/check-size.js"
  },
  "keywords": [
    "theme",
    "dark-mode",
    "light-mode",
    "react"
  ],
  "author": "Your Name",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "happy-dom": "^17.4.4",
    "@size-limit/preset-small-lib": "^8.0.0",
    "size-limit": "^8.0.0"
  },
  "size-limit": [
    {
      "path": "dist/bundle.js",
      "limit": "10 kB"
    }
  ]
}
