{
  "name": "@flex-theme/react",
  "version": "1.0.0",
  "description": "React hooks for flex-theme",
  "author": "",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "dependencies": {
    "@flex-theme/core": "workspace:*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/flex-theme.git",
    "directory": "packages/react"
  },
  "keywords": [
    "theme",
    "dark-mode",
    "light-mode",
    "react",
    "typescript"
  ]
}
